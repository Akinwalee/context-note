{
	"manifest_version": 3,
	"name":"ContextNote",
	"version": "1.0.0",
	"description": "Highlight and annotate text on anywebpage.",
	"permissions": [
		"storage",
		"activeTab",
		"scripting",
		"contextMenus",
		"tabs"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"action": {
		"default_popup": "popup.html"
	},
	"background": {

	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_idle"
		}
	]
}